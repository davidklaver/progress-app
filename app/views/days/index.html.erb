<p id="notice"><%= notice %></p>

<h1>Making Progress</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Shacharis</th>
      <th>Mincha</th>
      <th>Maariv</th>
      <th>Learning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.date.strftime("%A, %B %d, %Y") %></td>
        <td><%= day.shacharis %></td>
        <td><%= day.mincha %></td>
        <td><%= day.maariv %></td>
        <td><%= day.learning %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Day', new_day_path, class: "button" %>
